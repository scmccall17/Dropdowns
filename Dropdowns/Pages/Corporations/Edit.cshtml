@page
@model Dropdowns.Pages.Corporations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Corporation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Corporation.CorporationID" />
            <div class="form-group">
                <label asp-for="Corporation.CorporationName" class="control-label"></label>
                <input asp-for="Corporation.CorporationName" class="form-control" />
                <span asp-validation-for="Corporation.CorporationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Corporation.ContinentID" class="control-label"></label>
                <select asp-for="Corporation.ContinentID" class="form-control" asp-items="ViewBag.ContinentID"></select>
                <span asp-validation-for="Corporation.ContinentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Corporation.CountryID" class="control-label"></label>
                <select asp-for="Corporation.CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
                <span asp-validation-for="Corporation.CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
